<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="PdfToolX.PdfMerger">
  <DockPanel>
    <StackPanel Orientation="Horizontal" Spacing="12" Margin="10" DockPanel.Dock="Top">
      <Button Click="BtnAddFile_Click">添加文件</Button>
      <Button Click="BtnMerge_Click">开始合并</Button>
    </StackPanel>
    <DockPanel Margin="10 0 10 20" DockPanel.Dock="Bottom" Height="300">
      <Border BorderBrush="Black" BorderThickness="1">
        <ScrollViewer>
          <TextBlock Name="_txtLog"/>
        </ScrollViewer>
      </Border>
    </DockPanel>
    <DockPanel Margin="10 0 10 10">
      <TextBox Name="_txtFileList" AcceptsReturn="True"/>
    </DockPanel>
  </DockPanel>
</UserControl>
